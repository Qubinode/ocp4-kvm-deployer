apiVersion: v1
baseDomain: {{ ocp4_cluster_domain }}
compute:
- name: worker
  hyperthreading: Enabled
  platform: {}
  replicas: {{ compute_count }}
controlPlane:
  name: master
  hyperthreading: Enabled
  platform: {}
  replicas: {{ master_count }}
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetworks:
  - cidr: 10.128.0.0/14
    hostSubnetLength: 9
  machineCIDR: 10.0.0.0/16
  serviceCIDR: 172.30.0.0/16
  type: OpenShiftSDN
platform:
  none: {}
{% if ocp4_okd4 ==  "ocp4" %}
pullSecret: '{{ lookup('file', pull_secret) }}'
{% else %}
pullSecret: "'{'auths':{'fake':{'auth': 'bar'}}}'"
{% endif %}
sshKey: {{ ssh_ocp4_public_key }}
